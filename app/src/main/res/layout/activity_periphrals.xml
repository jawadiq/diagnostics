<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".periphrals">

    <LinearLayout
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical">

                <ImageButton
                    android:layout_width="76dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:onClick="toVibrate"
                    android:padding="10dp"
                    android:src="@drawable/ic_vibration_black_24dp" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Test Viberation"
                    android:textStyle="bold"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="76dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:onClick="toHeadphone"
                    android:padding="10dp"
                    android:src="@drawable/ic_headset_black_24dp" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Test HeadPhone"
                    android:textStyle="bold"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="76dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:onClick="toBtnss"
                    android:padding="10dp"
                    android:src="@drawable/ic_keyboard_hide_black_24dp" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Test Buttons"
                    android:textStyle="bold"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="76dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:onClick="toMic"
                    android:padding="10dp"
                    android:src="@drawable/ic_hearing_black_24dp" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="EarSpeaker Test"
                    android:textStyle="bold"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="76dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:onClick="toBtnss"
                    android:padding="10dp"
                    android:src="@drawable/ic_keyboard_hide_black_24dp" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Test Buttons"
                    android:textStyle="bold"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="76dp"
                    android:layout_height="64dp"
                    android:background="@color/green"
                    android:onClick="toMic"
                    android:padding="10dp"
                    android:src="@drawable/ic_mic_none_black_24dp" />
                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:text="Microphone Test"
                    android:textStyle="bold"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>